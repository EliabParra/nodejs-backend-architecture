{
    "name": "nodejs-backend-architecture",
    "version": "0.0.1",
    "description": "Una arquitectura de backend desacoplada para Node.js",
    "license": "MIT",
    "main": "dist/src/index.js",
    "scripts": {
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "typecheck:js": "tsc -p tsconfig.check.json --noEmit",
        "test": "node --import tsx --import ./test/setup.mjs --test",
        "test:http": "node --import tsx --import ./test/setup.mjs --test test/*.http.test.mjs",
        "test:cli": "node --import tsx --import ./test/setup.mjs --test test/*cli*.test.mjs",
        "test:watch": "node --import tsx --import ./test/setup.mjs --test --watch",
        "test:coverage": "c8 --reporter=text --reporter=text-summary --reporter=lcov node --import tsx --import ./test/setup.mjs --test",
        "build": "tsx scripts/build-dist.ts",
        "smoke:dist": "npm run build && tsx scripts/smoke-dist.ts",
        "verify:migration": "npm run typecheck && npm run smoke:dist && npm test",
        "start": "node --import tsx src/index.ts",
        "start:dist": "cd dist && node src/index.js",
        "dev:dist": "nodemon --watch src --watch BO --watch public --watch scripts/build-dist.ts --ext js,ts,json,mjs,html,css --signal SIGINT --exec \"npm run build && node dist/src/index.js\"",
        "dev": "nodemon --watch src --watch BO --watch public --ext js,ts,json,html,css --signal SIGINT --exec \"node --import tsx src/index.ts\"",
        "full": "tsx scripts/full.ts",
        "db:init": "tsx scripts/db-init.ts",
        "hashpw": "tsx scripts/hash-password.ts",
        "bo": "tsx scripts/bo.ts",
        "docs:jsdoc": "jsdoc -c jsdoc.json",
        "export:starter": "tsx scripts/export-starter.ts"
    },
    "type": "module",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "colors": "^1.4.0",
        "connect-pg-simple": "^10.0.0",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "express-rate-limit": "^7.5.1",
        "express-session": "^1.18.2",
        "helmet": "^8.1.0",
        "nodemailer": "^7.0.12",
        "nodemon": "^3.1.11",
        "pg": "^8.16.3"
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "c8": "^10.1.3",
        "jsdoc": "^4.0.4",
        "prettier": "^3.6.2",
        "supertest": "^7.1.4",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "c8": {
        "all": true,
        "include": [
            "src/**/*.js"
        ],
        "exclude": [
            "src/jsdoc/**",
            "test/**",
            "scripts/**",
            "BO/**",
            "public/**",
            "docs/**"
        ]
    }
}
