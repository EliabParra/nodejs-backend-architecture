# Copy this file to .env and adjust values.
# IMPORTANT: never commit .env with real secrets.

# App
APP_PORT=3000
APP_HOST=localhost
APP_LANG=es

# Reverse proxy / load balancer
# If you deploy behind a proxy (Render/Heroku/Nginx/Cloudflare/etc.) and need secure cookies or real client IPs,
# set Express trust proxy. Common value: 1
#APP_TRUST_PROXY=1

# Frontend (optional)
# Choose who serves pages:
# - none: API-only (decoupled) (recommended default)
# - pages: backend serves legacy HTML from /public/pages
# - spa: backend serves a built SPA (React/Angular/Vue/etc.) from SPA_DIST_PATH
APP_FRONTEND_MODE=none

# Only required when APP_FRONTEND_MODE=spa
# Must point to a folder containing index.html (the build output)
# Examples:
# SPA_DIST_PATH=..\frontend-angular-repo\dist\frontend-angular-repo\browser
# SPA_DIST_PATH=C:\absolute\path\to\some-spa\dist
#SPA_DIST_PATH=

# Optional dev helper (npm run full)
# Path to your frontend repo folder (must contain package.json)
# Example:
# FRONTEND_PATH=..\frontend-angular-repo
#FRONTEND_PATH=

# Optional: which npm script to run in the frontend when using `npm run full`
#FRONTEND_SCRIPT=start

# Optional: extra args passed to the frontend script when using `npm run full`
# This becomes: npm run <FRONTEND_SCRIPT> -- <FRONTEND_ARGS>
#FRONTEND_ARGS=--port 4200

# Optional: which npm script to run in the backend when using `npm run full`
#BACKEND_SCRIPT=dev

# Optional: extra args passed to the backend script when using `npm run full`
# This becomes: npm run <BACKEND_SCRIPT> -- <BACKEND_ARGS>
#BACKEND_ARGS=

# Postgres (either DATABASE_URL or PG* variables)
#DATABASE_URL=postgres://postgres:password@localhost:5432/curso-node
PGHOST=localhost
PGPORT=5432
PGDATABASE=curso-node
PGUSER=postgres
PGPASSWORD=change_me
PGSSL=false

# Session secret rotation
# Use a single secret:
#SESSION_SECRET=change_me
# Or rotate secrets (first is current signer, rest are previous):
SESSION_SECRETS=change_me_current,change_me_previous

# Optional cookie overrides
#SESSION_COOKIE_SECURE=true
#SESSION_COOKIE_SAMESITE=lax
#SESSION_COOKIE_MAXAGE_MS=1800000

# Optional CORS overrides (handy for production)
#CORS_ENABLED=true
#CORS_CREDENTIALS=true
# Comma-separated list of allowed origins:
#CORS_ORIGINS=https://my-frontend.example,https://admin.example
